                  <i class="ti ti-user-plus me-1"></i>
                  Add Faculty
                </a>
              </div>
            </li>
          <% } %>
          
          <!-- Students Section -->
          <% if (user && ['admin', 'principal', 'hod', 'faculty'].includes(user.role)) { %>
