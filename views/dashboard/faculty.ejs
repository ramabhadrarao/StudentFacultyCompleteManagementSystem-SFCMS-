<!-- views/dashboard/faculty.ejs -->
<%- include('../partials/header') %>

<div class="page">
  <%- include('../partials/navbar') %>
  <%- include('../partials/sidebar') %>

  <div class="page-wrapper">
    <div class="container-xl">
      <div class="page-header d-print-none">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="page-title">Faculty Dashboard</h2>
          </div>
        </div>
      </div>
    </div>

    <div class="page-body">
      <div class="container-xl">
        <div class="row row-deck row-cards">
          
          <!-- Quick actions card -->
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <h3 class="card-title">Quick Actions</h3>
                <div class="list-group list-group-flush">
                  <a href="/attendance/mark" class="list-group-item list-group-item-action">Mark Attendance</a>
                  <a href="/faculty/profile" class="list-group-item list-group-item-action">My Profile</a>
                  <a href="/timetable" class="list-group-item list-group-item-action">My Timetable</a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Attendance summary card -->
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <h3 class="card-title">Today's Attendance</h3>
                <div class="d-flex align-items-center">
                  <div class="subheader">Marked Students</div>
                  <div class="ms-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      65% <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><polyline points="3 17 9 11 13 15 21 7" /><polyline points="14 7 21 7 21 14" /></svg>
                    </span>
                  </div>
                </div>
                <div class="progress progress-sm">
                  <div class="progress-bar bg-green" style="width: 65%" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" aria-label="65% Complete">
                    <span class="visually-hidden">65% Complete</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Upcoming sessions card -->
          <div class="col-md-6 col-lg-6">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Upcoming Classes</h3>
              </div>
              <div class="list-group list-group-flush">
                <div class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col-auto">
                      <span class="badge bg-blue">9:30 AM</span>
                    </div>
                    <div class="col">
                      <div class="text-body">Database Management Systems</div>
                      <div class="text-muted">B.Tech CSE - 4th Semester</div>
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col-auto">
                      <span class="badge bg-blue">11:30 AM</span>
                    </div>
                    <div class="col">
                      <div class="text-body">Data Structures</div>
                      <div class="text-muted">B.Tech CSE - 2nd Semester</div>
                    </div>
                  </div>
                </div>
                <div class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col-auto">
                      <span class="badge bg-blue">2:30 PM</span>
                    </div>
                    <div class="col">
                      <div class="text-body">Computer Networks Lab</div>
                      <div class="text-muted">B.Tech CSE - 6th Semester</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </div>
</div>

<%- include('../partials/scripts') %>