<!-- views/dashboard/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Dashboard' }) %>
<body>
  <div class="page">
    <!-- Include header and navigation partials -->
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>
    
    <div class="page-wrapper">
      <!-- Include page header partial -->
      <%- include('../partials/page-header', { pretitle: 'Overview', pageTitle: 'Dashboard' }) %>
      
      <!-- Page body -->
      <div class="page-body">
        <div class="container-xl">
          <!-- Flash messages -->
          <%- include('../partials/messages') %>
          
          <!-- Welcome Card -->
          <div class="col-12 mb-3">
            <%- include('./partials/welcome-card') %>
          </div>
          
          <!-- Role-specific dashboard content -->
          <% if (user.role === 'admin') { %>
            <%- include('./partials/admin-stats') %>
          <% } else if (user.role === 'faculty' || user.role === 'hod') { %>
            <%- include('./partials/faculty-stats') %>
          <% } else if (user.role === 'student') { %>
            <%- include('./partials/student-stats') %>
          <% } else if (user.role === 'principal') { %>
            <%- include('./partials/principal-stats') %>
          <% } %>
          
          <!-- Quick Actions and Notifications -->
          <div class="row row-deck row-cards mt-3">
            <div class="col-md-6 col-lg-4">
              <%- include('./partials/quick-actions') %>
            </div>
            
            <div class="col-md-6 col-lg-8">
              <%- include('./partials/notifications') %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Include footer partial -->
      <%- include('../partials/footer') %>
    </div>
  </div>
  
  <!-- Include modals partial -->
  <%- include('../partials/modals') %>
  
  <!-- Include scripts partial -->
  <%- include('../partials/scripts') %>
</body>
</html>